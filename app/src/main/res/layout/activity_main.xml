<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/layoutMenu"
        android:background="@drawable/btn_round_blue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fechaF"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:visibility="invisible"
                android:textSize="1sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fecha"
                android:textColor="@color/white"
                android:text="14 07 2023"
                android:layout_marginBottom="15sp"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/reloj"
                android:textColor="@color/white"
                android:text="00:00:00"
                android:layout_marginRight="10sp"
                android:textSize="13sp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- Buttons Layout (Parada & Movimiento en Grupo) -->
        <LinearLayout
            android:id="@+id/layoutBotones1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnParada"
                android:background="@drawable/btn_round"
                android:text="PARADA"
                android:textColor="@color/colorPrimaryDark"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnMovGrupo"
                android:background="@drawable/btn_round"
                android:text="MOVIMIENTO EN GRUPO"
                android:textColor="@color/colorPrimaryDark"
                app:backgroundTint="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:layout_marginEnd="5dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutBotones2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnHoraFija"
                android:text="Hora fija"
                app:backgroundTint="@null"
                android:background="@drawable/btn_round"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnFinJornada"
                android:text="Fin jornada"
                app:backgroundTint="@null"
                android:background="@drawable/btn_round"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cdEmpresa"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/nameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE DE USUARIO"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/idActividad"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/layoutMenu"
        android:background="@drawable/btn_round_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layoutClock"
            android:visibility="gone"
            android:background="@drawable/btn_round"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtHoraFija"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutNave"
            android:background="@drawable/btn_round"
            android:layout_below="@id/layoutClock"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Selecciona Zona de Trabajo:"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtIdNave"
                    android:text="21540"
                    android:textSize="6sp"
                    android:layout_width="1dp"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtNave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:text="Nombre Cultivo"
                    android:textAlignment="center"
                    android:textSize="23sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutTarea"
            android:background="@drawable/btn_round"
            android:layout_marginTop="5dp"
            android:layout_below="@id/layoutNave"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Selecciona Tarea: "/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:text="Tipo "/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtIdTarea"
                    android:text="1"
                    android:textSize="26sp"
                    android:layout_width="1dp"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtTarea"
                    android:text="Nombre Tarea"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtTipoTarea"
                    android:text="E"
                    android:textAlignment="center"
                    android:background="@drawable/btn_round_blue"
                    android:textSize="23sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutRSP"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtRSP"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutNFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtAcercarLlave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Acercar llave NFC"
            style="@style/Titulos_Black"
            android:textSize="20sp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20sp" >

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:hint="nfc code" />

            <Button
                android:id="@+id/btnGrabarTicaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="grabar"
                android:textColor="@color/white" />
        </LinearLayout>
        <TextView
            android:id="@+id/nfc_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>